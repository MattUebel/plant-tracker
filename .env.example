# Database configuration
POSTGRES_PASSWORD=your_password_here
POSTGRES_USER=postgres
POSTGRES_DB=plant_tracker
DB_PORT=5433
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Application settings
SECRET_KEY=your_secret_key_here
APP_PORT=8000
DEBUG=false
ENVIRONMENT=development

# API keys for vision processing
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Optional: Alternative OCR provider
ANTHROPIC_API_KEY=your_api_key_here
CLAUDE_MODEL=claude-3-7-sonnet-20250219

# Optional: Mistral OCR provider
MISTRAL_API_KEY=your_api_key_here
MISTRAL_MODEL=mistral-1-0

# Vision API Provider Configuration - options: "claude", "gemini", or "mistral"
VISION_API_PROVIDER=gemini